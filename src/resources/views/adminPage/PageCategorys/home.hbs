              <th class="">STT</th>
              <th class="">Tên Category</th>
              <th class="">Hình ảnh</th>
              <th class=""></th>
              <th class="">Thao tác</th> 
            </tr>
      {{#each data}}

            <tr>
              <td class="">{{inc @index}}</td>
              <td class="">{{nameCategory}}</td>
              <td class=""><img src="/uploads/{{this.imageCategory}}" alt=""></td>
              <td class=""> <input class="form-check-input" type="checkbox" value="{{this._id}}" name="select_Category[]"></td>
              <td class="">
                    <div class="btn btn-dark-custom my-2" data-bs-toggle="modal" data-bs-target="#ModalDelete" data-id="{{this._id}}">Xoá</div>
                    <button class="btn btn-blue-custom my-2 btn_edit_category" type="button" value="{{this._id}}">Sửa</button>
              </td> 
            </tr>


      {{/each}}
      </table>
      {{else}}
           {{>empty}}
    {{/if}}
  </div>
