<div class="pd-header">
    <div class="container-fluid">
        <div class="pd-w-100 section-Chapter">
            <div class="preview-Menu">
                <div class="text-center fs-3">
                    <span>
                        <i class="fas fa-trophy color-primary fs-4"></i>
                    </span>
                    Sản phẩm từ Nhà
                </div>
                <div class="d-flex flex-wrap justify-content-center list-category pd-t-50 divTest">
                    {{#each dataCategory}}
                    <a href="{{this.slug}}" class="item-category a-none test12">
                        <div class="">
                            <div class="image-cateogry rounded-circle m-auto">
                                <img class="h-100" src="http://localhost:3030/uploads/{{this.imageCategory}}" alt="">
                            </div>
                            <div class="fs-6 text-center text-disable text-coffe my-2">
                                {{this.nameCategory}}
                            </div>
                        </div>
                    </a>
                    {{/each}}

                </div>
            </div>
            <div class="preview-Product mt-5">
                <div class="row my-3">
                    {{#if dataProducts}}
                    {{#each dataProducts}}
                    <div class="col-lg-2 col-md-4 col-sm-12 my-2">
                        <div class="border-product">
                            <a href="product/{{this.slug}}" class="a-none text-dark">
                                <div class="">
                                    <div>
                                        <img class="img-product"
                                            src="http://localhost:3030/uploads/{{this.imageRepresent}}" alt="">
                                    </div>
                                    <div class="preview-info-product">
                                        <h4 class="name-product fs-6 fw-bolder">
                                            {{this.nameProduct}}
                                        </h4>
                                        <div class="d-flex justify-content-between align-items-center mt-4">
                                            <div class="fs-6 price">
                                                {{this.priceStandard}}
                                            </div>
                                            <div class="fs-3">
                                                <i class="fas fa-plus-circle color-primary"></i>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </a>

                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    {{>empty}}
                    {{/if}}
                </div>
            </div>

        </div>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var price = $(".price");
        price.each(function () {
            $(this).text(formatter.format($(this).text()));
        })
    })
</script>


</script>